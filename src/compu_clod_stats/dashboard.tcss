Screen {
    layout: vertical;
}

#panel-scroll {
    height: 1fr;
}

#system-panel {
    height: auto;
    min-height: 16;
    border: solid green;
    border-title-color: green;
    padding: 0 1;
}

#network-panel {
    height: auto;
    min-height: 12;
    border: solid cyan;
    border-title-color: cyan;
    padding: 0 1;
}

#docker-panel {
    height: auto;
    min-height: 14;
    border: solid dodgerblue;
    border-title-color: dodgerblue;
    padding: 0 1;
}

#git-panel {
    height: auto;
    min-height: 12;
    border: solid magenta;
    border-title-color: magenta;
    padding: 0 1;
}

#health-panel {
    height: auto;
    min-height: 12;
    border: solid yellow;
    border-title-color: yellow;
    padding: 0 1;
}

#claude-panel {
    height: auto;
    min-height: 30;
    border: solid orangered;
    border-title-color: orangered;
    padding: 0 1;
}

CollapsiblePanel:focus {
    border: double;
}

.collapsed {
    height: auto;
    min-height: 0;
}

.collapsed .summary-line {
    margin-bottom: 0;
}

DataTable {
    height: auto;
}

.summary-line {
    height: auto;
    margin-bottom: 1;
}


#claude-scroll {
    height: auto;
}
